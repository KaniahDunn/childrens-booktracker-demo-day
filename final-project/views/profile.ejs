<div class="is-preload">

  <!-- Wrapper -->
  <div id="wrapper">
    <!-- Menu -->
    <nav id="menu">
      <ul class="links">
        <li><a href="/">Home</a></li>
        <li><a href="landing.html">Landing</a></li>
        <li><a href="generic.html">Generic</a></li>
        <li><a href="elements.html">Elements</a></li>
      </ul>
      <ul class="actions stacked">
        <li><a href="#" class="button primary fit">Get Started</a></li>
        <li><a href="#" class="button fit">My Profile</a></li>
        <li><a href="/" class="button fit">Log Out</a></li>
      </ul>
    </nav>

    <!-- Main -->
    <div id="main" class="alt">

      <!-- One -->
      <section id="one">
        <div class="inner">
          <header class="major">
            <h1>Welcome, <%= user.local.firstName %></h1>
          </header>
          <a href="/updatelibrary"><button class="button primary">Add a Book to Library</button></a>
          <h2 id="content">Check out all the read books in your library!</h2>
          <!-- Content -->
          <div class="col-6 col-12-medium">
            <!-- Image -->
            <div class="box alt">
              <div class="row gtr-50 gtr-uniform">
                <% for(var i=0; i <userbooks.length; i++) {%>
                <div class="col-4">
                  <span class="image fit">
                    <h3><%= userbooks[i].bookTitle %></h3>
                    <span><%= userbooks[i].bookAuthor %></span>
                    <span><%= userbooks[i].level %></span>
                    <img src="<%= userbooks[i].bookImage %>" alt="" />
                    <a class="bookId" href="/book/<%= userbooks[i]._id %>">Edit</a>
                    <button class="trashButton" type="button" name="trash">Delete</button>
                  </span>

                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <section>
          <button type="button" name="button"><a href="/incentives">Select an Incentive</a></button>
        </section>
    </div>
  </div>
</div>
